@model TaskManagerPro.Models.UserRoleViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h1>Manage Roles for @Model.UserName</h1>

<form asp-action="ManageRoles" method="post">
    <div class="form-group">
        <label asp-for="Role" class="control-label">Role</label>
        <select asp-for="Role" class="form-control" asp-items="@(new SelectList(Model.AvailableRoles))">
            <option value="">-- Select a role --</option>
        </select>
    </div>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
